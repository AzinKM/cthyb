# This file allows other CMake Projects to find us
# We provide general project information
# and reestablish the exported CMake Targets

# Multiple inclusion guard
if(NOT CTHYB_FOUND)
set(CTHYB_FOUND TRUE)
set_property(GLOBAL PROPERTY CTHYB_FOUND TRUE)

# version
set(CTHYB_VERSION @PROJECT_VERSION@ CACHE STRING "CTHYB version")
set(CTHYB_GIT_HASH @PROJECT_GIT_HASH@ CACHE STRING "CTHYB git hash")

# Root of the installation
set(CTHYB_ROOT @CMAKE_INSTALL_PREFIX@ CACHE STRING "CTHYB root directory")

## Find the target dependencies
#include(CMakeFindDependencyMacro)
#find_dependency(... HINTS @CMAKE_INSTALL_PREFIX@)

# Include the exported targets of this project
include(@CMAKE_INSTALL_PREFIX@/lib/cmake/triqs_cthyb/triqs_cthyb-targets.cmake)

message(STATUS "Found triqs_cthyb-config.cmake with version @PROJECT_VERSION@, hash = @PROJECT_GIT_HASH@")

# Was the Project built with Documentation?
set(CTHYB_WITH_DOCUMENTATION @Build_Documentation@ CACHE BOOL "Was cthyb build with documentation?")

# Was the Project built with PythonSupport?
set(CTHYB_WITH_PYTHON_SUPPORT @PythonSupport@ CACHE BOOL "Was cthyb build with python support?")

endif()
